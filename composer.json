{
    "name": "abbah/unit-conversions",
    "description": "A PHP package for unit conversions",
    "keywords": [
        "abbah",
        "unit-conversions"
    ],
    "homepage": "https://github.com/anohabbah/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Abbah Anoh",
            "email": "anohabbah@gmail.com",
            "homepage": "https://twitter.com/abbahanoh",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Abbah\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abbah\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
